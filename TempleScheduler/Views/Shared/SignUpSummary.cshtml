@model TimeSlots


<tr>
    <!--Date and Time to Display Available Slots-->
    <td>@Model.AvailableTime.ToString("dddd, dd MMMM yyyy")</td>
    <td>@Model.AvailableTime.ToString("h:mm tt")</td>
    <td>
        <!--FORM, Reserve Button to pass to Enter Info-->
        <form id="@Model.TimeId" asp-page="/EnterInfo" method="get">
            <input type="hidden" asp-for="TimeId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                <!--RESERVE BUTTON-->
                <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                    Reserve
                </button>
            </span>
        </form>
    </td>
</tr>
